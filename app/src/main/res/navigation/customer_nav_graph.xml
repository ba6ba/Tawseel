<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
            app:startDestination="@id/actionStores"
            android:id="@+id/main_nav_graph.xml">

    <include
            app:graph="@navigation/common_menu_navigation_graph"
    />

    <fragment android:id="@+id/actionStores"
              android:label="Stores"
              tools:layout="@layout/fragment_stores"
              android:name="com.example.sarwan.tawseel.modules.stores.StoresFragment"
    >

        <action android:id="@+id/action_storesFragment_to_VendorFragment"
                app:enterAnim="@android:anim/slide_in_left"
                app:exitAnim="@android:anim/slide_out_right"
                app:popEnterAnim="@android:anim/fade_in"
                app:popExitAnim="@android:anim/fade_out"
                app:destination="@+id/actionVendor"
        />

    </fragment>

    <fragment android:id="@+id/actionVendor"
              android:label="Vendor"
              tools:layout="@layout/fragment_vendors"
              android:name="com.example.sarwan.tawseel.modules.vendors.VendorFragment"
    >

        <action android:id="@+id/action_vendorFragment_to_DetailsFragment"
                app:enterAnim="@android:anim/slide_in_left"
                app:exitAnim="@android:anim/slide_out_right"
                app:popEnterAnim="@android:anim/fade_in"
                app:popExitAnim="@android:anim/fade_out"
                app:destination="@id/actionDetails"
        />


    </fragment>

    <fragment
            android:id="@+id/actionDetails"
            android:name="com.example.sarwan.tawseel.modules.details.ItemDetailsFragment"
            tools:layout="@layout/fragment_item_details"
            android:label="Details"
    />

    <fragment android:id="@+id/actionOrders"
              android:label="Order Status"
              tools:layout="@layout/fragment_orders"
              android:name="com.example.sarwan.tawseel.modules.orders.OrdersFragment"
    >
        <action android:id="@+id/action_ordersFragment_to_RatingFragment"
            app:enterAnim="@android:anim/slide_in_left"
            app:exitAnim="@android:anim/slide_out_right"
            app:popEnterAnim="@android:anim/fade_in"
            app:popExitAnim="@android:anim/fade_out"
            app:destination="@id/actionRating"
            />

    </fragment>

    <fragment
        android:id="@+id/actionRating"
        android:name="com.example.sarwan.tawseel.modules.rating.RatingFragment"
        tools:layout="@layout/fragment_rating"
        android:label="Rating"
        />

    <fragment android:id="@+id/actionNotifications"
              android:label="Notifications"
              tools:layout="@layout/fragment_notifications"
              android:name="com.example.sarwan.tawseel.modules.notifications.NotificationsFragment"
    >



    </fragment>

    <fragment android:id="@+id/actionUser"
              android:label="User"
              tools:layout="@layout/fragment_user"
              android:name="com.example.sarwan.tawseel.modules.user.UserFragment"
    >

    </fragment>

    <fragment android:id="@+id/actionCart"
              android:label="Cart"
              tools:layout="@layout/fragment_cart"
              android:name="com.example.sarwan.tawseel.modules.cart.CartFragment"
    />

    <fragment android:id="@+id/actionTracking"
              android:label="Order Status"
              tools:layout="@layout/fragment_orders"
              android:name="com.example.sarwan.tawseel.modules.orders.OrdersFragment"
    />


</navigation>