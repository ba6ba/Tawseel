<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:layout_width="match_parent"
                                                   android:padding="@dimen/x8"
                                                   android:layout_height="wrap_content">

    <ImageView android:layout_width="@dimen/x20"
               android:layout_height="0dp"
               android:src="@drawable/locationmarker"
               android:id="@+id/imageView3"
               app:layout_constraintEnd_toEndOf="@+id/km"
               app:layout_constraintStart_toStartOf="@+id/km" android:layout_marginTop="8dp"
               app:layout_constraintTop_toTopOf="parent"
               app:layout_constraintBottom_toTopOf="@+id/km"/>

    <ImageView android:layout_width="@dimen/x40"
               android:layout_height="@dimen/x40"
               android:src="@drawable/foodplace"
               app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
               android:id="@+id/imageView" android:layout_marginBottom="8dp"
               app:layout_constraintBottom_toBottomOf="parent" android:layout_marginTop="8dp"
               app:layout_constraintTop_toTopOf="parent"/>

    <TextView android:layout_width="0dp"
              android:layout_height="wrap_content"
              tools:text="@string/app_name"
              android:id="@+id/name"
              style="@style/Tawseel.TextView.Medium.Grey"
              android:textSize="@dimen/t24"
              android:textStyle="bold"
              android:maxLines="1"
              android:ellipsize="end"
              android:textColor="@color/darK_grey"
              app:layout_constraintStart_toEndOf="@+id/imageView"
              android:layout_marginStart="8dp" android:layout_marginEnd="8dp"
              app:layout_constraintEnd_toStartOf="@+id/km" android:layout_marginTop="8dp"
              app:layout_constraintTop_toTopOf="parent"/>

    <TextView android:layout_width="0dp"
              android:layout_height="wrap_content"
              tools:text="@string/app_name"
              android:id="@+id/description"
              style="@style/Tawseel.TextView.Medium.Grey"
              android:textSize="@dimen/t12"
              android:maxLines="1"
              android:ellipsize="end"
              android:textColor="@color/darK_grey"
              app:layout_constraintStart_toEndOf="@+id/imageView"
              android:layout_marginStart="8dp"
              android:layout_marginEnd="8dp" app:layout_constraintEnd_toStartOf="@+id/km"
              app:layout_constraintTop_toBottomOf="@+id/name"/>

    <TextView android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              tools:text="@string/app_name"
              android:id="@+id/km"
              style="@style/Tawseel.TextView.Medium.Grey"
              android:textSize="@dimen/t14"
              android:maxLines="1"
              android:ellipsize="end"
              android:textColor="@color/colorPrimary"
              android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent"
              android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent"/>


</androidx.constraintlayout.widget.ConstraintLayout>