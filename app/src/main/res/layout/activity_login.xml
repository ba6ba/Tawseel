<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="match_parent">

    <include
            layout="@layout/app_background"
            android:id="@+id/include" android:layout_width="match_parent" android:layout_height="match_parent"/>

    <TextView android:layout_width="100dp" android:layout_height="100dp"
              android:text="LOGO"
              android:background="@drawable/circle"
              android:backgroundTint="@color/scent"
              style="@style/Tawseel.TextView.Medium.White"
              android:textAlignment="center"
              android:textStyle="bold"
              android:gravity="center"
              android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="8dp"
              app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toTopOf="parent"
              android:layout_marginTop="70dp" android:id="@+id/textView"/>

</androidx.constraintlayout.widget.ConstraintLayout>