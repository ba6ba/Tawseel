<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:layout_width="match_parent"
                                                   android:background="@color/white"
                                                   android:layout_height="wrap_content">

    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="@dimen/x10"
            android:weightSum="4"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" android:id="@+id/constraintLayout3">

        <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/linearLayout4"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:layout_weight="1"
                android:gravity="center|top"
                android:orientation="vertical"
                app:layout_constraintEnd_toStartOf="@+id/linearLayout9"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

            <include
                    layout="@layout/layout_status_bar"
                    android:layout_width="0dp"
                    android:id="@+id/towards_two"
                    android:layout_height="@dimen/x2"
                    app:layout_constraintBottom_toTopOf="@+id/textView6"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="@+id/status_one"
                    app:layout_constraintTop_toTopOf="@+id/status_one"/>

            <TextView
                    android:id="@+id/status_one"
                    style="@style/Tawseel.TextView.Medium.White"
                    android:layout_width="@dimen/x36"
                    android:layout_height="@dimen/x36"
                    android:background="@drawable/ic_tick_mark"
                    android:gravity="center"
                    app:layout_constraintEnd_toEndOf="@+id/textView6"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"/>

            <TextView
                    android:id="@+id/textView6"
                    style="@style/Tawseel.TextView.Medium.Grey"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/order_confirmed"
                    android:textAlignment="center"
                    android:textSize="@dimen/t14"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/status_one"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/linearLayout9"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_weight="1"
                android:gravity="center|top"
                android:orientation="vertical"
                android:visibility="visible"
                app:layout_constraintEnd_toStartOf="@+id/linearLayout3"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toEndOf="@+id/linearLayout4"
                app:layout_constraintTop_toTopOf="parent">

            <include
                    android:id="@+id/towards_three"
                    layout="@layout/layout_status_bar"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/x2"
                    android:layout_marginStart="8dp"
                    app:layout_constraintBottom_toTopOf="@+id/textView8"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="@+id/status_two"
                    app:layout_constraintTop_toTopOf="parent"/>

            <include
                    android:id="@+id/from_one"
                    layout="@layout/layout_status_bar"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/x2"
                    android:layout_marginEnd="8dp"
                    app:layout_constraintBottom_toTopOf="@+id/textView8"
                    app:layout_constraintEnd_toEndOf="@+id/status_two"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"/>

            <TextView
                    android:id="@+id/status_two"
                    style="@style/Tawseel.TextView.Medium.White"
                    android:layout_width="@dimen/x36"
                    android:layout_height="@dimen/x36"
                    android:background="@drawable/ic_tick_mark"
                    android:gravity="center"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"/>

            <TextView
                    android:id="@+id/textView8"
                    style="@style/Tawseel.TextView.Medium.Grey"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Items Collected"
                    android:textAlignment="center"
                    android:textSize="@dimen/t14"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/status_two"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/linearLayout3"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_weight="1"
                android:gravity="center|top"
                android:orientation="vertical"
                android:visibility="visible"
                app:layout_constraintEnd_toStartOf="@+id/linearLayout6"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toEndOf="@+id/linearLayout9"
                app:layout_constraintTop_toTopOf="parent">

            <include
                    android:id="@+id/towards_four"
                    layout="@layout/layout_status_bar"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/x2"
                    android:layout_marginStart="8dp"
                    app:layout_constraintBottom_toTopOf="@+id/textView11"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="@+id/status_three"
                    app:layout_constraintTop_toTopOf="parent"/>

            <include
                    android:id="@+id/from_two"
                    layout="@layout/layout_status_bar"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/x2"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="8dp"
                    android:layout_marginBottom="8dp"
                    app:layout_constraintBottom_toTopOf="@+id/textView11"
                    app:layout_constraintEnd_toEndOf="@+id/status_three"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/status_three"/>

            <ImageView
                    android:id="@+id/status_three"
                    style="@style/Tawseel.TextView.Medium.White"
                    android:layout_width="@dimen/x36"
                    android:layout_height="@dimen/x36"
                    android:background="@drawable/circle_grey"
                    android:gravity="center"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"/>

            <TextView
                    android:id="@+id/textView11"
                    style="@style/Tawseel.TextView.Medium.Grey"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="On the way"
                    android:textAlignment="center"
                    android:textSize="@dimen/t14"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/status_three"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/linearLayout6"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:layout_weight="1"
                android:gravity="center|top"
                android:orientation="vertical"
                android:visibility="visible"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toEndOf="@+id/linearLayout3"
                app:layout_constraintTop_toTopOf="parent">

            <include
                    android:id="@+id/from_three"
                    layout="@layout/layout_status_bar"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/x2"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="8dp"
                    android:layout_marginBottom="8dp"
                    app:layout_constraintBottom_toTopOf="@+id/textView13"
                    app:layout_constraintEnd_toEndOf="@+id/status_four"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/status_four"/>

            <ImageView
                    android:id="@+id/status_four"
                    style="@style/Tawseel.TextView.Medium.White"
                    android:layout_width="@dimen/x36"
                    android:layout_height="@dimen/x36"
                    android:background="@drawable/circle_grey"
                    android:gravity="center"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"/>

            <TextView
                    android:id="@+id/textView13"
                    style="@style/Tawseel.TextView.Medium.Grey"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="2dp"
                    android:text="Arrived"
                    android:textAlignment="center"
                    android:textSize="@dimen/t14"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/status_four"/>

        </androidx.constraintlayout.widget.ConstraintLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>

    <include
            layout="@layout/layout_chat_call_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView15"
            android:layout_marginTop="16dp" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

    <ImageView
            android:id="@+id/avatar2"
            android:layout_width="@dimen/x80"
            android:layout_height="@dimen/x80"
            android:layout_marginTop="8dp"
            android:src="@drawable/driver_pic_avatar"
            android:layout_marginBottom="8dp"
            app:layout_constraintTop_toBottomOf="@+id/constraintLayout3" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"/>
    <TextView
            tools:text="Customer Nmae"
            android:layout_width="wrap_content"
            style="@style/Tawseel.TextView.Medium.Grey"
            android:layout_height="wrap_content" android:id="@+id/textView15" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/avatar2" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp" android:layout_marginStart="8dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>
