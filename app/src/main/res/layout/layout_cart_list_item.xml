<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
                                                   android:layout_height="wrap_content">

    <include
            layout="@layout/layout_line_divider"
            android:layout_width="match_parent"
            android:layout_height="@dimen/x2"
            app:layout_constraintTop_toBottomOf="@+id/item" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginTop="24dp" android:layout_marginEnd="16dp"
            android:layout_marginStart="16dp"/>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/price"
            app:layout_constraintTop_toTopOf="parent"
            style="@style/Tawseel.TextView.Medium.Grey"
            android:textSize="@dimen/t18"
            android:layout_marginTop="8dp" tools:text="@string/Pizza"
            android:layout_marginEnd="24dp" app:layout_constraintEnd_toEndOf="parent"/>
    <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content" android:id="@+id/item"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toTopOf="parent"
            style="@style/Tawseel.TextView.Medium.Grey"
            android:textSize="@dimen/t18"
            android:layout_marginStart="24dp"
            android:layout_marginTop="8dp" tools:text="@string/Pizza"
            android:layout_marginEnd="32dp" app:layout_constraintEnd_toStartOf="@+id/price"/>
</androidx.constraintlayout.widget.ConstraintLayout>