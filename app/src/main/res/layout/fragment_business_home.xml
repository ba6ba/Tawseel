<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="match_parent"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools">

    <Button android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:background="@drawable/igloo_shape"
            android:backgroundTint="@color/scent"
            android:text="@string/edit"
            android:elevation="@dimen/x16"
            style="@style/Tawseel.TextView.Rounded.Background"
            android:textSize="@dimen/t24"
            android:paddingStart="@dimen/x36"
            android:paddingEnd="@dimen/x36"
            android:gravity="center"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintHorizontal_bias="0.486"
            app:layout_constraintBottom_toBottomOf="parent" app:srcCompat="@drawable/igloo_shape"
            android:id="@+id/edit_business"/>
    <TextView
            tools:text="@string/business_description"
            android:textStyle="bold"
            android:layout_width="0dp"
            style="@style/Tawseel.TextView.Medium.Blue"
            android:layout_height="wrap_content" android:id="@+id/business_name"
            app:layout_constraintTop_toBottomOf="@+id/business_profile_image"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginStart="16dp" android:layout_marginEnd="16dp" android:layout_marginTop="32dp"/>
    <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:hintAnimationEnabled="false"
            app:errorEnabled="true"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:id="@+id/business_description_layout"
            android:visibility="gone"
            tools:visibility="visible"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintTop_toBottomOf="@+id/business_name_layout" android:layout_marginTop="16dp">

        <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/Tawseel.EditText.Rounded.Background.Stroke"
                android:imeOptions="actionDone"
                android:layout_gravity="center"
                android:gravity="top"
                android:hint="@string/business_description"
                android:minHeight="@dimen/x150"
                android:inputType="text"
        />
    </com.google.android.material.textfield.TextInputLayout>
    <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:hintAnimationEnabled="false"
            app:errorEnabled="true"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:id="@+id/business_name_layout"
            android:visibility="gone"
            android:hint="@string/business_name"
            tools:visibility="visible"
            app:layout_constraintHorizontal_bias="0.0"
            android:layout_marginTop="16dp" app:layout_constraintTop_toBottomOf="@+id/business_profile_image">

        <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/Tawseel.EditText.Rounded.Background.Stroke"
                android:imeOptions="actionNext"
                android:layout_gravity="center"
                android:minHeight="@dimen/x50"
                android:inputType="text"
        />
    </com.google.android.material.textfield.TextInputLayout>

    <com.facebook.drawee.view.SimpleDraweeView
            android:layout_width="@dimen/x150"
            android:layout_height="@dimen/x150"
            android:id="@+id/business_profile_image"
            app:roundAsCircle="true"
            app:placeholderImageScaleType="fitCenter"
            app:placeholderImage="@drawable/food_cover"
            android:layout_marginTop="32dp"
            android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toTopOf="parent"/>

    <ImageView android:layout_width="@dimen/x40" android:layout_height="@dimen/x40"
               android:background="@drawable/background_edit_image"
               android:src="@drawable/ico_edit"
               android:visibility="gone"
               tools:visibility="visible"
               android:id="@+id/edit_profile_image"
               android:tint="@color/white"
               app:layout_constraintBottom_toBottomOf="@+id/business_profile_image"
               app:layout_constraintEnd_toEndOf="@+id/business_profile_image"/>
    <TextView
            tools:text="@string/business_name"
            android:textStyle="bold"
            android:layout_width="0dp"
            style="@style/Tawseel.TextView.Medium.Blue"
            android:layout_height="wrap_content" android:id="@+id/business_description"
            app:layout_constraintTop_toBottomOf="@+id/business_name"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginStart="16dp" android:layout_marginEnd="16dp" android:layout_marginTop="32dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>