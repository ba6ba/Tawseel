<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="match_parent"
                                                   xmlns:tools="http://schemas.android.com/tools">

    <Button android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:background="@drawable/igloo_shape"
            android:backgroundTint="@color/scent"
            android:text="@string/order"
            android:elevation="@dimen/x16"
            style="@style/Tawseel.TextView.Rounded.Background"
            android:id="@+id/order"
            android:textSize="@dimen/t24"
            android:paddingStart="@dimen/x36"
            android:paddingEnd="@dimen/x36"
            android:gravity="center"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintHorizontal_bias="0.486"
            app:layout_constraintBottom_toBottomOf="parent" app:srcCompat="@drawable/igloo_shape"/>
    <ImageView android:layout_width="match_parent"
               android:layout_height="@dimen/x200"
               android:id="@+id/cover"
               android:src="@drawable/food_cover"
               android:scaleType="fitXY"
               app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toTopOf="parent"
               app:layout_constraintEnd_toEndOf="parent"/>

    <fragment android:layout_width="match_parent"
              android:layout_height="0dp"
              android:id="@+id/fragment_cart"
              tools:layout="@layout/fragment_cart"
              android:name="com.example.sarwan.tawseel.modules.cart.CartFragment"
              app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
              android:layout_marginTop="16dp" app:layout_constraintTop_toBottomOf="@+id/cover"
    />

    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
              android:text="@string/description"
              android:textSize="@dimen/t20"
              style="@style/Tawseel.TextView.Medium.Blue"
              app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="16dp"
              android:id="@+id/textView3" android:layout_marginTop="32dp"
              app:layout_constraintTop_toBottomOf="@+id/fragment_cart"/>
    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
              android:text="@string/description"
              style="@style/Tawseel.TextView.Medium.Grey"
              android:textColor="@color/darK_grey"
              app:layout_constraintTop_toBottomOf="@+id/textView3"
              android:maxLines="5"
              android:ellipsize="end"
              app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="16dp"
              android:id="@+id/description" android:layout_marginTop="8dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>