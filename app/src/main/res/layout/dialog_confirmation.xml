<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="wrap_content"
                                                   android:layout_margin="@dimen/x16"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView android:layout_width="match_parent"
                                       android:layout_height="wrap_content"
                                       app:cardBackgroundColor="@color/white"
                                       app:cardCornerRadius="@dimen/x18"
                                       app:cardElevation="@dimen/x10"
                                       app:cardMaxElevation="@dimen/x14"
                                       app:layout_constraintStart_toStartOf="parent"
                                       app:layout_constraintTop_toTopOf="parent"
                                       app:layout_constraintEnd_toEndOf="parent"
                                       app:layout_constraintBottom_toBottomOf="parent">


        <androidx.constraintlayout.widget.ConstraintLayout android:layout_width="match_parent"
                                                           android:layout_height="wrap_content">

            <LinearLayout android:layout_width="wrap_content"
                          android:orientation="horizontal"
                          android:layout_height="wrap_content" app:layout_constraintTop_toBottomOf="@+id/description"
                          app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
                          android:layout_marginTop="32dp"
                          app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
                          app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="32dp">

                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                          android:id="@+id/yes"
                          style="@style/Tawseel.Yes.Button"
                          app:layout_constraintStart_toStartOf="parent"
                          app:layout_constraintBottom_toBottomOf="parent"
                          app:layout_constraintTop_toBottomOf="@+id/description"
                          android:layout_marginStart="@dimen/x20"
                          android:layout_marginEnd="@dimen/x20"
                />

                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                          android:id="@+id/no"
                          style="@style/Tawseel.No.Button"
                          app:layout_constraintBottom_toBottomOf="parent"
                          android:layout_marginStart="@dimen/x20"
                          android:layout_marginEnd="@dimen/x20"
                          app:layout_constraintStart_toEndOf="@+id/yes"/>


            </LinearLayout>



            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                      android:text="Add more Products ?"
                      android:id="@+id/description"
                      android:textColor="@color/darK_grey"
                      android:textSize="@dimen/t24"
                      style="@style/Tawseel.TextView.Medium.Grey"
                      app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
                      app:layout_constraintTop_toBottomOf="@+id/title"
                      android:layout_marginTop="32dp"/>
            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                      android:text="@string/wait"
                      android:id="@+id/title"
                      android:textColor="@color/darK_grey"
                      android:textSize="@dimen/t24"
                      style="@style/Tawseel.TextView.Medium.Grey"
                      app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
                      app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="24dp"/>



        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>


</androidx.constraintlayout.widget.ConstraintLayout>