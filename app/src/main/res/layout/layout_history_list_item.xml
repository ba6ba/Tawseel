<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="wrap_content"
                                                   xmlns:map="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools">


    <androidx.constraintlayout.widget.ConstraintLayout android:layout_width="match_parent"
                                                       android:layout_height="wrap_content"
                                                       app:layout_constraintStart_toStartOf="parent"
                                                       app:layout_constraintTop_toTopOf="parent"
                                                       app:layout_constraintEnd_toEndOf="parent"
                                                       android:background="@color/white"
                                                       android:id="@+id/constraintLayout4">


        <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:visibility="gone"
                tools:visibility="gone"
                app:layout_constraintEnd_toEndOf="parent" app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent" android:id="@+id/non_business_history_section"
                app:layout_constraintStart_toEndOf="@+id/history_time" android:layout_marginStart="100dp">

            <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content" android:id="@+id/payment_type"
                    style="@style/Tawseel.TextView.Medium.Grey"
                    android:textSize="@dimen/t14"
                    android:text="@string/cash"
                    app:layout_constraintStart_toStartOf="parent" android:layout_marginTop="8dp"
                    app:layout_constraintTop_toBottomOf="@+id/total_bill" android:layout_marginStart="8dp"/>
            <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content" android:id="@+id/total_bill"
                    style="@style/Tawseel.TextView.Medium.Grey"
                    android:textColor="@color/black"
                    android:textSize="@dimen/t12"
                    android:text="@string/total_bill_heading"
                    app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toTopOf="parent"
                    android:layout_marginTop="8dp" android:layout_marginStart="8dp"/>

            <com.example.sarwan.tawseel.views.TawseelRatingBar
                    android:layout_width="0dp"
                    app:srb_starWidth="@dimen/x30"
                    android:id="@+id/rating_bar"
                    app:srb_minimumStars="1"
                    app:srb_rating="2"
                    app:srb_clickable="true"
                    app:srb_scrollable="true"
                    app:srb_isIndicator="true"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="@+id/payment_type"
                    app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginEnd="16dp" app:layout_constraintStart_toEndOf="@+id/payment_type"
                    android:layout_marginStart="16dp">


            </com.example.sarwan.tawseel.views.TawseelRatingBar>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:visibility="gone"
                app:layout_constraintEnd_toEndOf="parent" app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent" android:id="@+id/business_history_section"
                tools:visibility="visible" app:layout_constraintStart_toEndOf="@+id/history_time"
                android:layout_marginStart="100dp">

            <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content" android:id="@+id/history_total_bill"
                    style="@style/Tawseel.TextView.Medium.Grey"
                    android:textColor="@color/black"
                    android:textSize="@dimen/t12"
                    android:text="@string/total_bill_heading"
                    app:layout_constraintTop_toTopOf="@+id/history_total_bill2"
                    app:layout_constraintBottom_toBottomOf="@+id/history_total_bill2"
                    android:layout_marginEnd="32dp"
                    app:layout_constraintEnd_toStartOf="@+id/history_total_bill2" android:layout_marginStart="8dp"
                    app:layout_constraintStart_toStartOf="parent"/>
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/history_your_bill"
                    style="@style/Tawseel.TextView.Medium.Blue"
                    android:textSize="@dimen/t14"
                    tools:text="@tools:sample/last_names"
                    android:layout_marginEnd="8dp"
                    app:layout_constraintEnd_toEndOf="parent" android:layout_marginTop="8dp"
                    app:layout_constraintTop_toBottomOf="@+id/history_total_bill2"/>
            <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content" android:id="@+id/history_total_bill3"
                    style="@style/Tawseel.TextView.Medium.Blue"
                    android:textSize="@dimen/t12"
                    android:text="@string/your_bill_heading"
                    app:layout_constraintTop_toTopOf="@+id/history_your_bill"
                    app:layout_constraintBottom_toBottomOf="@+id/history_your_bill"
                    app:layout_constraintVertical_bias="0.0" app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginEnd="32dp" app:layout_constraintEnd_toStartOf="@+id/history_your_bill"
                    android:layout_marginStart="8dp"/>
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/business_payment_type"
                    style="@style/Tawseel.TextView.Medium.Grey"
                    android:textSize="@dimen/t14"
                    android:text="@string/cash"
                    android:layout_marginTop="8dp"
                    app:layout_constraintTop_toBottomOf="@+id/history_your_bill"
                    app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
                    app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="8dp"/>
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/history_total_bill2"
                    style="@style/Tawseel.TextView.Medium.Grey"
                    android:textSize="@dimen/t14"
                    tools:text="@tools:sample/last_names"
                    android:layout_marginEnd="8dp"
                    app:layout_constraintEnd_toEndOf="parent" android:layout_marginTop="8dp"
                    app:layout_constraintTop_toTopOf="parent"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/history_items"
                style="@style/Tawseel.TextView.Medium.Grey"
                android:textSize="@dimen/t14"
                tools:text="@tools:sample/last_names"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="8dp"
                app:layout_constraintTop_toBottomOf="@+id/history_time" android:layout_marginTop="8dp"
        />
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/history_time"
                style="@style/Tawseel.TextView.Medium.Grey"
                android:textColor="@color/black"
                android:textSize="@dimen/t20"
                tools:text="@tools:sample/date/ddmmyy"
                app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toTopOf="parent"
                android:layout_marginStart="8dp"

                android:layout_marginTop="8dp"/>

    </androidx.constraintlayout.widget.ConstraintLayout>


    <com.google.android.gms.maps.MapView
            android:layout_width="match_parent"
            map:liteMode="true"
            map:mapType="none"
            android:layout_height="@dimen/x200"
            android:id="@+id/map_view"
            tools:layout_editor_absoluteX="0dp" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/constraintLayout4"
    />

</androidx.constraintlayout.widget.ConstraintLayout>