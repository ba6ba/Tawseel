<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:layout_width="match_parent"
                                                   android:padding="@dimen/x8"
                                                   android:layout_height="wrap_content">

    <ImageView android:layout_width="@dimen/x50"
               android:layout_height="@dimen/x50"
               android:src="@drawable/food_img"
               app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
               android:id="@+id/imageView" android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent"
               android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent"/>

    <TextView android:layout_width="0dp"
              android:layout_height="wrap_content"
              tools:text="@string/app_name"
              android:id="@+id/name"
              style="@style/Tawseel.TextView.Medium.Grey"
              android:textSize="@dimen/t24"
              android:textStyle="bold"
              android:maxLines="1"
              android:ellipsize="end"
              android:textColor="@color/darK_grey"
              android:layout_marginEnd="8dp" app:layout_constraintEnd_toStartOf="@+id/price"
              android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent"
              app:layout_constraintStart_toEndOf="@+id/imageView" android:layout_marginStart="8dp"/>

    <TextView android:layout_width="0dp"
              android:layout_height="wrap_content"
              tools:text="@string/app_name"
              android:id="@+id/description"
              style="@style/Tawseel.TextView.Medium.Grey"
              android:textSize="@dimen/t12"
              android:maxLines="1"
              android:ellipsize="end"
              android:textColor="@color/darK_grey"
              app:layout_constraintTop_toBottomOf="@+id/name"
              android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent"
              android:layout_marginEnd="8dp" app:layout_constraintEnd_toStartOf="@+id/price"
              app:layout_constraintStart_toEndOf="@+id/imageView" android:layout_marginStart="8dp"/>

    <TextView android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              tools:text="@string/app_name"
              android:id="@+id/price"
              style="@style/Tawseel.TextView.Medium.Grey"
              android:textSize="@dimen/t22"
              android:maxLines="1"
              android:textStyle="bold"
              android:ellipsize="end"
              android:textColor="@color/colorPrimary"
              android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent"
              android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent"/>


</androidx.constraintlayout.widget.ConstraintLayout>