<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools" android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout android:layout_width="match_parent"
                                                       android:layout_height="0dp"
                                                       app:layout_constraintStart_toStartOf="parent"
                                                       app:layout_constraintEnd_toEndOf="parent"
                                                       android:layout_marginBottom="8dp"
                                                       app:layout_constraintBottom_toTopOf="@+id/cart_button"
                                                       android:visibility="gone" tools:visibility="visible"
                                                       android:id="@+id/non_empty_layout"
                                                       android:layout_marginTop="8dp"
                                                       app:layout_constraintTop_toBottomOf="@+id/imageView5">
        <TextView android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="@string/item_details"
                  style="@style/Tawseel.TextView.Medium.Grey"
                  android:textSize="@dimen/t28"
                  android:textStyle="bold"
                  android:textColor="@color/colorPrimary"
                  android:layout_marginStart="8dp"
                  app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
                  android:layout_marginEnd="8dp"
                  android:id="@+id/textView16" android:layout_marginTop="8dp"
                  app:layout_constraintTop_toTopOf="parent"/>

        <androidx.recyclerview.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:id="@+id/cart_recycler_view"
                tools:itemCount="30"
                tools:listitem="@layout/layout_cart_list_item"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="8dp" android:layout_marginBottom="8dp"
                app:layout_constraintBottom_toBottomOf="parent" android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/textView16">


        </androidx.recyclerview.widget.RecyclerView>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <ImageView android:layout_width="@dimen/x150" android:layout_height="@dimen/x150"
               android:background="@drawable/circle"
               android:backgroundTint="@color/colorPrimary"
               app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
               app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
               android:layout_marginTop="32dp" app:layout_constraintTop_toTopOf="parent" android:id="@+id/imageView5"/>

    <androidx.constraintlayout.widget.ConstraintLayout android:layout_width="match_parent"
                                                       android:layout_height="wrap_content"
                                                       app:layout_constraintTop_toBottomOf="@+id/imageView5"
                                                       app:layout_constraintStart_toStartOf="parent"
                                                       app:layout_constraintEnd_toEndOf="parent"
                                                       android:padding="@dimen/x20"
                                                       android:layout_marginBottom="8dp"
                                                       app:layout_constraintBottom_toTopOf="@+id/cart_button"
                                                       android:visibility="gone" tools:visibility="gone"
                                                       android:id="@+id/empty_layout">

        <ImageView android:layout_width="@dimen/x100" android:layout_height="@dimen/x100"
                   app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
                   app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
                   android:id="@+id/imageView6" android:layout_marginTop="24dp"
                   app:layout_constraintTop_toBottomOf="@+id/textView9" android:layout_marginBottom="24dp"
                   app:layout_constraintBottom_toBottomOf="parent" app:srcCompat="@drawable/ic_shopping_cart"/>

        <TextView android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="@string/empty_cart"
                  style="@style/Tawseel.TextView.Medium.Grey"
                  android:textSize="@dimen/t28"
                  android:textStyle="bold"
                  android:layout_marginStart="8dp"
                  app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
                  android:layout_marginEnd="8dp" android:layout_marginTop="24dp"
                  app:layout_constraintTop_toTopOf="parent" android:id="@+id/textView9"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <Button android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:background="@drawable/igloo_shape"
            android:backgroundTint="@color/scent"
            style="@style/Tawseel.TextView.Rounded.Background"
            android:id="@+id/cart_button"
            android:textSize="@dimen/t24"
            android:paddingStart="@dimen/x36"
            android:paddingEnd="@dimen/x36"
            android:gravity="center"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintHorizontal_bias="0.486"
            app:layout_constraintBottom_toBottomOf="parent" app:srcCompat="@drawable/igloo_shape"
            tools:text="@string/deliver"/>

</androidx.constraintlayout.widget.ConstraintLayout>