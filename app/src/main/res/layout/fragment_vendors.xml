<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
                                                   android:layout_height="match_parent"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout android:layout_width="match_parent"
                                                       android:layout_height="wrap_content"
                                                       android:background="@drawable/rounded_rectangle"
                                                       android:backgroundTint="@color/search_grey"
                                                       android:padding="@dimen/x6"
                                                       app:layout_constraintStart_toStartOf="parent"
                                                       app:layout_constraintTop_toTopOf="parent"
                                                       app:layout_constraintEnd_toEndOf="parent"
                                                       android:layout_marginEnd="8dp"
                                                       android:layout_marginStart="8dp" android:layout_marginTop="8dp"
                                                       android:id="@+id/constraintLayout2">

        <ImageView android:layout_width="@dimen/x24" android:layout_height="@dimen/x24"
                   android:src="@drawable/search"
                   app:layout_constraintStart_toStartOf="parent"
                   android:layout_marginStart="8dp" app:layout_constraintTop_toTopOf="parent"
                   app:layout_constraintBottom_toBottomOf="parent" android:id="@+id/imageView2"/>


        <com.google.android.material.textfield.TextInputEditText android:layout_width="0dp"
                                                                 android:layout_height="wrap_content"
                                                                 android:id="@+id/search_text_view"
                                                                 android:backgroundTint="@color/search_grey"
                                                                 android:hint="@string/search_text"
                                                                 style="@style/Tawseel.EditText"
                                                                 android:layout_marginEnd="8dp"
                                                                 app:layout_constraintEnd_toEndOf="parent"
                                                                 app:layout_constraintStart_toEndOf="@+id/imageView2"
                                                                 android:layout_marginStart="8dp"
                                                                 app:layout_constraintTop_toTopOf="parent"
                                                                 app:layout_constraintBottom_toBottomOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>


    <include
            layout="@layout/tab_layout_with_viewpager"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/constraintLayout2"
            app:layout_constraintBottom_toBottomOf="parent"
    />

</androidx.constraintlayout.widget.ConstraintLayout>