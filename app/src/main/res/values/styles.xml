<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="Tawseel.EditText.Rounded.Background.Stroke" parent="Tawseel.EditText">
        <item name="android:background">@drawable/rounded_stroke_rectangle</item>
        <item name="android:textSize">@dimen/t14</item>
        <item name="android:paddingStart">@dimen/x24</item>
        <item name="android:paddingEnd">@dimen/x24</item>
        <item name="android:paddingTop">@dimen/x10</item>
        <item name="android:paddingBottom">@dimen/x10</item>
    </style>

    <style name="Tawseel.TextView.Rounded.Background" parent="Tawseel.TextView">
        <item name="android:background">@drawable/rounded_rectangle</item>
        <item name="android:backgroundTint">@color/scent</item>
        <item name="android:textSize">@dimen/t20</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:paddingStart">@dimen/x30</item>
        <item name="android:paddingEnd">@dimen/x30</item>
        <item name="android:paddingTop">@dimen/x6</item>
        <item name="android:paddingBottom">@dimen/x6</item>
        <item name="android:textAllCaps">true</item>

    </style>

    <style name="Tawseel.Yes.Button" parent="Tawseel.TextView">
        <item name="android:text">@string/yes</item>
        <item name="android:background">@drawable/button_yes</item>
        <item name="android:textSize">@dimen/t18</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:paddingStart">@dimen/x30</item>
        <item name="android:paddingEnd">@dimen/x30</item>
        <item name="android:paddingTop">@dimen/x6</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:paddingBottom">@dimen/x6</item>
        <item name="android:textAlignment">center</item>
        <item name="android:minWidth">@dimen/x80</item>
    </style>

    <style name="Tawseel.No.Button" parent="Tawseel.TextView">
        <item name="android:background">@drawable/button_no</item>
        <item name="android:text">@string/no</item>
        <item name="android:textSize">@dimen/t18</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:paddingStart">@dimen/x30</item>
        <item name="android:paddingEnd">@dimen/x30</item>
        <item name="android:paddingTop">@dimen/x6</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:paddingBottom">@dimen/x6</item>
        <item name="android:textAlignment">center</item>
        <item name="android:minWidth">@dimen/x80</item>
    </style>

    <style name="Tawseel.TextView.Medium.Blue" parent="Tawseel.TextView">
        <item name="android:textSize">@dimen/t16</item>
        <item name="android:textColor">@color/scent</item>
    </style>

    <style name="Tawseel.TextView.Medium.White" parent="Tawseel.TextView">
        <item name="android:textSize">@dimen/t16</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Tawseel.TextView.Medium.Grey" parent="Tawseel.TextView">
        <item name="android:textSize">@dimen/t16</item>
        <item name="android:textColor">@color/grey</item>
    </style>


    <style name="Tawseel.TextView" parent="TextAppearance.AppCompat.Body1">
        <item name="android:fontFamily">@font/opensans_regular</item>
        <item name="android:textSize">@dimen/t14</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="Tawseel.EditText" parent="Widget.AppCompat.EditText">
        <item name="android:fontFamily">@font/opensans_regular</item>
        <item name="android:textSize">@dimen/t14</item>
        <item name="android:textColorHint">@color/grey</item>
        <item name="android:textColor">@color/darK_grey</item>
    </style>

    <style name="Taweel.BottomNavigation" parent="@style/Widget.MaterialComponents.BottomNavigationView">
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:layout_gravity">bottom</item>
        <item name="menu">@menu/main_navigation_menu</item>
        <item name="itemIconTint">@drawable/bottom_navigation_color_state</item>
        <item name="itemTextColor">@drawable/bottom_navigation_color_state</item>
    </style>

    <string name="no">No</string>
</resources>
